<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="module_debug_category" model="ir.module.category">
        <field name="name">Debug</field>
        <field name="sequence">30</field>
    </record>

    <record id="group_always_debug" model="res.groups">
        <field name="name">Always Debug Mode</field>
        <field name="category_id" ref="module_debug_category"/>
    </record>

    <record id="group_never_debug" model="res.groups">
        <field name="name">Never Debug Mode</field>
        <field name="category_id" ref="module_debug_category"/>
    </record>

    <record id="group_normal_debug" model="res.groups">
        <field name="name">Normal Debug Mode</field>
        <field name="category_id" ref="module_debug_category"/>
    </record>

</odoo>
